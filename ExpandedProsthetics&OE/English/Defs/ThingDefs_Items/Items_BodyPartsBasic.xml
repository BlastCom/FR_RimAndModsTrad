<?xml version="1.0" encoding="UTF-8"?>

<Defs>

   <ThingDef Name="Basic" ParentName="BodyPartBase" Abstract="True">
      <tradeTags>
         <li>BasicProstheses</li>
      </tradeTags>
      <thingCategories>
         <li>BodyPartsSimple</li>
      </thingCategories>
      <graphicData>
         <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
         <graphicClass>Graphic_Single</graphicClass>
         <drawSize>0.80</drawSize>
         <shaderType>CutoutComplex</shaderType>
      </graphicData>
      <statBases>
         <DeteriorationRate>0</DeteriorationRate>
         <WorkToMake>2500</WorkToMake>
      </statBases>
      <recipeMaker>
         <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
         <unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
         <workSkill>Crafting</workSkill>
         <effectWorking>Smith</effectWorking>
         <researchPrerequisite>BasicProsthetics</researchPrerequisite>
         <recipeUsers>
            <li>CraftingSpot</li>
         </recipeUsers>
      </recipeMaker>
   </ThingDef>

   <!-- Added body parts -->

   <ThingDef ParentName="Basic">
      <defName>SteelArm</defName>
      <label>steel arm</label>
      <description>A very poor arm replacement. Looks bad, feels bad, is bad.</description>
      <costList>
         <Steel>50</Steel>
      </costList>
      <statBases>
         <Mass>6</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Basic">
      <defName>EyePatch</defName>
      <label>eye patch</label>
      <description>Covers the eye socket. Intimidating.</description>
      <stuffCategories>
         <li>Fabric</li>
         <li>Leathery</li>
      </stuffCategories>
      <costStuffCount>15</costStuffCount>
      <recipeMaker>
         <effectWorking>Tailor</effectWorking>
         <soundWorking>Recipe_Tailor</soundWorking>
      </recipeMaker>
      <statBases>
         <Mass>0.3</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Basic">
      <defName>HookHand</defName>
      <label>hook hand</label>
      <description>Replaces missing hands. Pretty scary. Yarr.</description>
      <costList>
         <Steel>25</Steel>
      </costList>
      <statBases>
         <Mass>2</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Basic">
      <defName>denture</defName>
      <label>denture</label>
      <description>Replaces a missing jaw with wooden teeth. Smells gross and tastes even worse.</description>
      <costList>
         <WoodLog>25</WoodLog>
      </costList>
      <statBases>
         <Mass>2</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Basic">
      <defName>PegLeg</defName>
      <label>peg leg</label>
      <description>Replaces a missing leg with a wooden one. Slightly out of fashion but it does its job pretty well.</description>
      <costList>
         <WoodLog>50</WoodLog>
      </costList>
      <statBases>
         <Mass>6</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Basic">
      <defName>WoodenFoot</defName>
      <label>wooden foot</label>
      <description>Replaces missing feet with a wooden log. At least it's more comfortable than hopping around.</description>
      <costList>
         <WoodLog>25</WoodLog>
      </costList>
      <statBases>
         <Mass>2</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Basic">
      <defName>EarBandage</defName>
      <label>ear bandage</label>
      <description>Covers a missing ear. Steal the look of a certain unsuccessful 19th century artist!</description>
      <stuffCategories>
         <li>Fabric</li>
         <li>Leathery</li>
      </stuffCategories>
      <costStuffCount>15</costStuffCount>
      <recipeMaker>
         <effectWorking>Tailor</effectWorking>
         <soundWorking>Recipe_Tailor</soundWorking>
      </recipeMaker>
      <statBases>
         <Mass>0.2</Mass>
      </statBases>
   </ThingDef>

   </Defs>