            <tools>
               <li>
                  <label>bionic fist</label>
                  <capacities>
                     <li>Blunt</li>
                  </capacities>
                  <power>9</power>
                  <cooldownTime>2</cooldownTime>
               </li>
            </tools>
         </li>
      </comps>
   </HediffDef>
   
