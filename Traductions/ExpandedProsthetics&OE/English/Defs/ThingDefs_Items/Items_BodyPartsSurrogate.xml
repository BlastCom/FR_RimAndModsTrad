      <costList>
         <Cloth>25</Cloth>
         <Plasteel>50</Plasteel>
         <ComponentIndustrial>5</ComponentIndustrial>
      </costList>
      <recipeMaker>
         <researchPrerequisite>BrainSurgery</researchPrerequisite>
      </recipeMaker>
      <statBases>
         <MarketValue>800</MarketValue>
         <Mass>0.1</Mass>
      </statBases>
   </ThingDef>

