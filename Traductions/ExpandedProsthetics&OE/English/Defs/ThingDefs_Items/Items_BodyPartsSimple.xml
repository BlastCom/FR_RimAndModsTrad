<?xml version="1.0" encoding="UTF-8"?>

<Defs>

   <ThingDef Name="Simple" ParentName="BodyPartBase" Abstract="True">
      <techLevel>Industrial</techLevel>
      <tradeTags>
         <li>SimpleProstheses</li>
      </tradeTags>
      <thingCategories>
         <li>BodyPartsProsthetic</li>
      </thingCategories>
      <graphicData>
         <texPath>Things/Item/BodyPart/SimplePart</texPath>
         <graphicClass>Graphic_Single</graphicClass>
         <drawSize>0.80</drawSize>
      </graphicData>
      <techHediffsTags>
         <li>Simple</li>
      </techHediffsTags>
      <statBases>
         <DeteriorationRate>0</DeteriorationRate>
		 <WorkToMake>5000</WorkToMake>
      </statBases>
      <recipeMaker>
         <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
         <unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
         <workSkill>Crafting</workSkill>
         <effectWorking>Smith</effectWorking>
         <researchPrerequisite>Prosthetics</researchPrerequisite>
         <recipeUsers>
            <li>TableProsthetics</li>
         </recipeUsers>
		 <skillRequirements>
			<Crafting>5</Crafting>
		 </skillRequirements>
      </recipeMaker>
   </ThingDef>

   <!-- Added body parts -->

   <ThingDef ParentName="Simple">
      <defName>GoldenEye</defName>
      <label>golden eye</label>
      <description>Replaces missing eyes. So incredibly beautiful that it's a shame you can't see yourself in the mirror.</description>
      <costList>
         <Gold>1</Gold>
      </costList>
      <statBases>
         <Mass>0.3</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>ArtificialNose</defName>
      <label>artificial nose</label>
      <description>Replaces a missing nose. Covers the hole in the face.</description>
      <costList>
         <Plasteel>20</Plasteel>
      </costList>
      <statBases>
         <Mass>0.2</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>CochlearImplant</defName>
      <label>cochlear implant</label>
      <description>An implant which replaces normal hearing. An external microphone transmits a sound signal to electrodes wrapped around the inner ear's auditory sensing nerves. The electrodes stimulate the nerves according to the sound, creating a sensation of hearing. It's not as good as a natural ear, but it's a lot better than being deaf.</description>
      <costList>
         <Plasteel>25</Plasteel>
         <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>0.05</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>HydraulicJaw</defName>
      <label>hydraulic jaw</label>
      <description>Replaces a missing jaw. Be careful with the extremely efficient teeth!</description>
      <costList>
         <Steel>45</Steel>
         <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>2</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>LightReceptor</defName>
      <label>light receptor</label>
      <description>Replaces a missing eye. Can detect light and even objects. Like looking through frosted glass but without the colors.</description>
      <costList>
         <Plasteel>25</Plasteel>
         <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>0.3</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>SimpleProstheticHand</defName>
      <label>simple prosthetic hand</label>
      <description>Replaces missing hands. Way more comfortable and less frightening than the hook hand.</description>
      <costList>
         <Steel>35</Steel>
         <Plasteel>15</Plasteel>
         <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>3</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>SimpleProstheticFoot</defName>
      <label>simple prosthetic foot</label>
      <description>Replaces missing feet. Not as cheap as a wood log.</description>
      <costList>
         <Steel>35</Steel>
         <Plasteel>15</Plasteel>
         <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>3</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>SimpleProstheticLeg</defName>
      <label>simple prosthetic leg</label>
      <description>Simple prosthesis made to replace a missing leg. Not very comfortable but quite efficient.</description>
      <costList>
         <Steel>55</Steel>
         <Plasteel>25</Plasteel>
         <ComponentIndustrial>3</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>8</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>SimpleProstheticArm</defName>
      <label>simple prosthetic arm</label>
      <description>Simple but durable arm prosthesis.</description>
      <costList>
         <Steel>55</Steel>
         <Plasteel>25</Plasteel>
         <ComponentIndustrial>3</ComponentIndustrial>
      </costList>
      <statBases>
         <Mass>5</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>ArtificialPelvis</defName>
      <label>artificial pelvis</label>
      <description>Replaces a missing pelvis. Pretty useful if crawling is not your favourite way of moving around.</description>
      <costList>
         <Steel>45</Steel>
         <Plasteel>20</Plasteel>
      </costList>
      <statBases>
         <Mass>5</Mass>
      </statBases>
   </ThingDef>

   <ThingDef ParentName="Simple">
      <defName>ArtificialClavicle</defName>
      <label>artificial clavicle</label>
      <description>Replaces a missing clavicle. If you somehow manage to break yours.</description>
      <costList>
         <Steel>35</Steel>
      </costList>
      <statBases>
         <Mass>0.5</Mass>
      </statBases>
   </ThingDef>

</Defs>